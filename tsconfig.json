{
  "compilerOptions": {
    "target": "es6",                          
    "module": "ESNext",                   
    "allowJs": true,
    "declaration": true,                   
    "outDir": "./dist",
    "downlevelIteration": true,
    "strict": true,            
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,             
    "forceConsistentCasingInFileNames": true, 
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noEmit": true,
  },
  "include": ["src/**/*"]
}
